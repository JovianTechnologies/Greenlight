<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jquery-ui.min.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/style.min.css")
    <link rel="stylesheet" href="/Content/font-awesome-4.4.0/css/font-awesome.min.css"/>
    @Styles.Render("~/Content/layout.css")


    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-ui.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/demo.min.js");
    @Scripts.Render("~/Scripts/apps.min.js");
    @Scripts.Render("~/Scripts/rivets.bundled.min.js");
    @Scripts.Render("~/Scripts/bootbox.min.js")
    @Scripts.Render("~/Scripts/layout.js");
    

</head>
<body>
    <div class="body-div">
        <div class="page-sidebar-fixed">
            <div id="header" class="header navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <img class="logo navbar-brand" src="/Content/images/Greenlight Logo White.png"  />
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown navbar-user">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @Html.Encode(User.Identity.Name)<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Sign Out", "Logout", "User")</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div id="sidebar" class="sidebar">
                <div data-scrollbar="true" data-height="100%" data-init="true" style="overflow: hidden; width:auto; height: 100%">
                    <ul class="nav" style="margin-top: 10px;">
                        <li id="homeLink">
                            <a href="@Url.Content("~/home/")">
                                <i class="fa fa-home fa-2x"></i>
                                <span class="">Home</span>
                            </a>
                        </li>
                        <li id="captureLink">
                            <a href="@Url.Content("~/capture/")">
                                <i class="fa fa-upload fa-2x"></i>
                                <span class="">Capture Data</span>
                            </a>
                        </li>
                        <li id="viewDataLink" class="has-sub">
                            <a href="#">
                                <b class="caret pull-right"></b>
                                <i class="fa fa-search fa-2x"></i>
                                <span>View and Manage</span>
                            </a>
                            <ul class="sub-menu" style="">
                                <li id="view"><a href="@Url.Content("~/viewdata/")">View Data</a></li>
                                <li id="manage"><a href="@Url.Content("~/viewdata/settings/")">Settings</a></li>
                            </ul>
                        </li>
                        <li id="correctDataLink">
                            <a href="../correctdata/">
                                <i class="fa fa-pencil fa-2x"></i>
                                <span class="">Correct Data</span>
                            </a>
                        </li>
                        <li id="convertToXmlLink">
                            <a href="#">
                                <i class="fa fa-code fa-2x"></i>
                                <span class="">Convert To XML</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-area-chart fa-2x"></i>
                                <span class="">View Reports</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-line-chart fa-2x"></i>
                                <span class="">Custom Reports</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="slimScrollBar ui-draggable" style="width: 7px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 0px; height: 327.493px; background: rgb(0, 0, 0);"></div>
                <div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 0px; background: rgb(51, 51, 51);"></div>
            </div>
            <div id="content" class="content">
                @RenderBody()
            </div>
        </div>





        @RenderSection("scripts", required: false)

             
    </div>
    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>
</body>
</html>
    